generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
   relationMode = "prisma"
}


model Car {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  marka           String
  model           String
  slika           String
  klasa           String
  cijena          String
  potrosnja       Float
  brojcilindara   Int
  pogonskiKotaci  String
  vrstaMotora     String
  obujamMotora    Float
  ubrzanje        Float
  boja            String
  reservation    Reservation[]
}

model Reservation {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  carId       String   @db.ObjectId
  startDate   DateTime
  endDate     DateTime
  totalPrice  Float
  createdAt   DateTime @default(now())
  


  @@index([carId])
   car         Car     @relation(fields: [carId], references: [id])
}